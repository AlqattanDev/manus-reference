---
import type { Project } from '@/types';

interface Props {
  project: Project;
}

const { project } = Astro.props as Props;
---

<div class="entry project-card">
  <div class="entry-header">
    <span class="entry-title">[{project.id}] {project.name}</span>
  </div>
  <p class="entry-description">{project.description}</p>
  <div class="entry-description comment" style="margin-top: var(--space-sm);">
    // Features: {project.features.join(', ')}
  </div>
  <div class="tech-stack">
    {project.stack.map((tech: string) => <span class="tech-tag">{tech}</span>)}
  </div>
</div>

<style>
  /* Clean, simple project card - all styling handled by main.css .entry class */
</style>