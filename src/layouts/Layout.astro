    <!-- Canvas for ASCII Blueprint Background -->
    <canvas id="ascii-blueprint" class="blueprint-canvas"></canvas>

    <div class="container page">
        <div class="content">
            <slot />
        </div>
    </div>

    <script>
      // Enhanced View Switcher with Morphing Transitions
      const switcher = document.querySelector('.view-switcher') as HTMLElement | null;
      const body = document.body;
      const container = document.querySelector('.container') as HTMLElement | null;

      if (switcher && container) {
        switcher.addEventListener('click', () => {
          // Add transitioning class to prevent multiple clicks
          body.classList.add('view-transitioning');
          switcher.style.pointerEvents = 'none';

          if (body.classList.contains('digital-view')) {
            // Digital to Print transition
            container.classList.add('morphing-to-print');
            
            setTimeout(() => {
              body.classList.remove('digital-view');
              body.classList.add('print-view');
              container.classList.remove('morphing-to-print');
              container.classList.add('morphed-to-print');
              
              setTimeout(() => {
                container.classList.remove('morphed-to-print');
                body.classList.remove('view-transitioning');
                switcher.style.pointerEvents = 'auto';
              }, 100);
            }, 400);
            
          } else {
            // Print to Digital transition
            container.classList.add('morphing-to-digital');
            
            setTimeout(() => {
              body.classList.remove('print-view');
              body.classList.add('digital-view');
              container.classList.remove('morphing-to-digital');
              container.classList.add('morphed-to-digital');
              
              setTimeout(() => {
                container.classList.remove('morphed-to-digital');
                body.classList.remove('view-transitioning');
                switcher.style.pointerEvents = 'auto';
              }, 100);
            }, 400);
          }
        });
      }
    </script>


